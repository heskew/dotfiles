# path aliases
alias ..='cd ..'

# apps
alias st='open -a SourceTree '
alias md='open -a "Marked 2" '
alias vssh_debug="vagrant ssh -- -L 5858:127.0.0.1:5858"

# node
alias ni="node-inspector --preload false"
alias npmls='npm ls --depth=0'

# git
alias g='git'
alias gs='git status'
alias gp='git pull '
alias co="git co"
alias cob="git co -b"
alias clean="git checkout master && git branch --merged | grep -v master | xargs git branch -d"
alias cleancheck="git checkout master && git branch --merged | grep -v master"
alias upmaster="git fetch origin master:master"
alias diffmaster="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative master.."
alias upall="bash ~/.dotfiles/git/update_all.sh"

# locations
alias src='cd ~/src'
alias out='cd ~/outhouse'
alias dots='cd ~/.dotfiles'
alias sites='cd ~/sites'
alias nf='cd ~/nearform'

# docker
alias dm-list='docker-machine ls'
dm-env() {
    eval "$(docker-machine env "$1")"
}
dm-stop() {
    docker-machine stop $1
}
dm-start() {
    docker-machine start $1 && dm-env $1
}

# mysql
alias runmysql='mysql.server start'
alias stopmysql='mysql.server stop'

# redis
alias runredis='redis-server /usr/local/etc/redis.conf &'
alias stopredis='redis-cli shutdown'
